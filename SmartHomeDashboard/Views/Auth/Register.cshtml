@model RegisterViewModel
<h2>Register</h2>
<form asp-action="Register" method="post">
    <input asp-for="FirstName" placeholder="First Name" />
    <input asp-for="LastName" placeholder="Last Name" />
    <input asp-for="Email" placeholder="Email" />
    <input asp-for="Password" placeholder="Password" type="password" />
    <input asp-for="ConfirmPassword" placeholder="Confirm Password" type="password" />
    <button type="submit">Register</button>
</form>
<a asp-controller="Auth" asp-action="Login">Already have an account? Login</a>
